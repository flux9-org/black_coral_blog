{{- $.Scratch.Add "index" slice -}}
{{- range where .Site.Pages "Kind" "eq" "page" -}}
  {{- if in (slice "posts" "tutorials") .Section -}}
    {{- $.Scratch.Add "index" (dict "uri" .Permalink "title" .Title "summary" .Summary "tags" .Params.tags "categories" .Params.categories "uid" .Params.UID) -}}
  {{- end -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}
